{
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.indentSize": 2,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 150,
    "files.exclude": {
        "**/.angular": true,
        "**/.git": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
    },
    "files.watcherExclude": {
        "**/.angular": true,
        "**/.git": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
    },
    "search.exclude": {
        "**/.angular": true,
        "**/.git": true,
        "**/dist": true,
        "**/node_modules": true,
        "**/package-lock.json": true,
    },
}